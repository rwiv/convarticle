{
  "manifest_version": 3,
  "name": "convarticle",
  "description": "convert articles",
  "icons": {
    "128": "icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "contentStyle.css",
        "icon-128.png",
        "icon-32.png"
      ],
      "matches": []
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "src/pages/content/index.tsx"
      ],
      "css": [
        "contentStyle.css"
      ]
    }
  ],
  "commands": {
    "conv": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z"
      },
      "description": "conv"
    },
    "re": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "re"
    },
    "change": {
      "suggested_key": {
        "default": "Ctrl+Q"
      },
      "description": "change"
    }
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "options_ui": {
    "page": "src/pages/options/index.html"
  },
  "permissions": [
    "activeTab", "scripting", "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
